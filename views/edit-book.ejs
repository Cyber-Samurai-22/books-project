<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit <%= book.title %> - My Book Notes</title>
  <link rel="stylesheet" href="/styles.css">
</head>
<body>
  <div class="container">
    <header class="page-header">
      <a href="/books/<%= book.id %>" class="back-button">← Back to Book Details</a>
      <h1>Edit Book</h1>
    </header>

    <main class="edit-book-container">
      <form action="/books/<%= book.id %>" method="POST" class="book-form">
        <div class="form-grid">
          <div class="form-column">
            <div class="book-cover-preview">
              <img src="<%= book.cover %>" alt="Cover of <%= book.title %>" class="book-cover medium">
            </div>
            
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" id="title" name="title" value="<%= book.title %>" required>
            </div>
            
            <div class="form-group">
              <label for="author">Author</label>
              <input type="text" id="author" name="author" value="<%= book.author %>" required>
            </div>
            
            <div class="form-group">
              <label for="isbn">ISBN</label>
              <input type="text" id="isbn" name="isbn" value="<%= book.isbn %>" required>
            </div>
            
            <div class="form-group">
              <label for="date_read">Date Read</label>
              <input type="date" id="date_read" name="date_read" value="<%= book.date_read.toISOString().split('T')[0] %>" required>
            </div>
            
            <div class="form-group">
              <label>Rating</label>
              <div class="star-rating">
                <% for (let i = 5; i >= 1; i--) { %>
                  <input type="radio" id="star<%= i %>" name="rating" value="<%= i %>" <%= book.rating === i ? 'checked' : '' %>>
                  <label for="star<%= i %>">★</label>
                <% } %>
              </div>
            </div>
          </div>
          
          <div class="form-column">
            <div class="form-group">
              <label for="review">Review</label>
              <textarea id="review" name="review" rows="15" required><%= book.review %></textarea>
            </div>
          </div>
        </div>
        
        <div class="form-actions">
          <button type="submit" class="button save-button">Save Changes</button>
          <a href="/books/<%= book.id %>" class="button cancel-button">Cancel</a>
        </div>
      </form>
    </main>
  </div>
</body>
</html>
